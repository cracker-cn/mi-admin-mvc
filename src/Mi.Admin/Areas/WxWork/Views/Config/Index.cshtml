@{
    Layout = "_ElementUiPlusLayout";
}

<el-card shadow="never">
    <template #header>
        <div class="card-header">
            <span>企业微信配置</span>
        </div>
    </template>
    <el-form label-position="left" :model="form" :label-width="labelWidth" ref="form" :rules="rules">
        <el-form-item label="企业Id" prop="corpid">
            <el-input v-model="form.corpid" placeholder="请输入企业Id" />
        </el-form-item>
        <el-form-item label="客户secret" prop="wx_work_member_secret">
            <el-input v-model="form.wx_work_member_secret" placeholder="请输入客户-应用密钥" />
        </el-form-item>
        <el-form-item label="通讯录secret" prop="wx_work_contact_list_secret">
            <el-input v-model="form.wx_work_contact_list_secret" placeholder="请输入通讯录-应用密钥" />
        </el-form-item>
        <el-form-item>
            <el-button v-permission="'WxWork:SetConfig'" type="primary" @@click="onSubmit('form',form)">确定</el-button>
            <el-button @@click="initData">重置</el-button>
        </el-form-item>
    </el-form>
</el-card>

@section Scripts{
    <script>
        const ROOT_PATH = '/WxWork/Config/';
        const App = {
            data() {
                return {
                    labelWidth: '120px',
                    form: {},
                    rules: {
                        corpid: [
                            { required: true, message: '企业Id不能为空', trigger: 'blur' }
                        ],
                        wx_work_member_secret: [
                            { required: true, message: '客户-应用密钥为空', trigger: 'blur' }
                        ],
                        wx_work_contact_list_secret: [
                            { required: true, message: '通讯录-应用密钥不能为空', trigger: 'blur' }
                        ]
                    }
                }
            },
            methods: {
                initData() {
                    axios.post(ROOT_PATH + "GetConfig").then(res => {
                        if (MiUtils.ajaxSucceed(res.data.code)) {
                            this.form.corpid = res.data.result.corpid
                            this.form.wx_work_member_secret = res.data.result.wx_work_member_secret
                            this.form.wx_work_contact_list_secret = res.data.result.wx_work_contact_list_secret
                        } else {
                            ElementPlus.ElMessage.error(res.data.message)
                        }
                    })
                },
                onSubmit(refName, data) {
                    this.$refs[refName].validate((valid, fields) => {
                        if (valid) {
                            ElementPlus.ElMessageBox.confirm(
                                '敏感操作，是否继续？',
                                '提示',
                                {
                                    confirmButtonText: '确定',
                                    cancelButtonText: '取消',
                                    type: 'warning',
                                }
                            )
                                .then(() => {
                                    axios.post(ROOT_PATH + 'SetConfig', data)
                                        .then(res => {
                                            if (MiUtils.ajaxSucceed(res.data.code)) {
                                                ElementPlus.ElMessage.success(res.data.message)
                                                this.initData()
                                            } else {
                                                ElementPlus.ElMessage.error(res.data.message)
                                            }
                                        })
                                }).catch(() => {
                                    ElementPlus.ElMessage({
                                        type: 'info',
                                        message: '取消操作',
                                    })
                                })
                        } else {
                            console.log(fields)
                            ElementPlus.ElMessage.warning('表单项验证失败')
                        }
                    })
                }
            },
            created() {
                this.initData()
            }
        }
    </script>
}