    <script>
        layui.use(['form','jquery'],function(){
            let $ = layui.$;
            let form = layui.form

            function uuid() {
                var temp_url = URL.createObjectURL(new Blob());
                var uuid = temp_url.toString();
                URL.revokeObjectURL(temp_url);
                return uuid.substr(uuid.lastIndexOf("/") + 1);
            }

            $('#captchaImg').click(function () {
                this.src = '/api/public/captcha?v=' + uuid()
            })

            form.on('submit(login)',function(data){
                $.post('/Account/Login/Do',data.field,function(res){
                    if(res.code === 90001){
                        window.location.href = '/'
                    }else{
                        layer.msg(res.message, {
                            icon: 2,
                            time: 1000
                        });
                    }
                })
            })

            form.on('submit(register)',function(data){
                if (data.field.re_sure_password != data.field.re_password){
                    layer.msg('两次密码不一致', {
                        icon: 2,
                        time: 1000
                    });
                    return;
                }
                let param = {
                    userName:data.field.re_userName,
                    password: data.field.re_password,
                }
                $.post('/Account/Login/New', param, function (res) {
                    if (res.code === 90001) {
                        layer.msg(res.message, {
                            icon: 1,
                            time: 1000
                        },function(){
                            window.location.reload();
                        });
                    } else {
                        layer.msg(res.message, {
                            icon: 2,
                            time: 1000
                        });
                    }
                })
            })
        })
    </script>
