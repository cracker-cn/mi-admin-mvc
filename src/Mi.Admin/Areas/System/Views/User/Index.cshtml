@{
    ViewData["PC"] = true;
}

<div class="layui-card">
    <div class="layui-card-body">
        <div class="layui-form">
            <div class="layui-form-item layui-inline">
                <label class="layui-form-label">用户名</label>
                <div class="layui-input-inline">
                    <input type="text" name="userName" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item layui-inline">
                <button class="pear-btn pear-btn-md pear-btn-primary" lay-submit lay-filter="user-query">
                    <i class="layui-icon layui-icon-search"></i>
                    查询
                </button>
                <button class="pear-btn pear-btn-md" id="btnReset">
                    <i class="layui-icon layui-icon-refresh"></i>
                    重置
                </button>
            </div>
        </div>
    </div>
</div>
<!--table-->
<div class="layui-card">
    <div class="layui-card-body">
        <table id="user-table" lay-filter="user-table"></table>
    </div>
</div>

@section Scripts{
    <script type="text/html" id="user-toolbar">
        <button class="pear-btn pear-btn-primary pear-btn-md" lay-event="add">
            <i class="layui-icon layui-icon-add-1"></i>
            新增
        </button>
    </script>

    <script type="text/html" id="user-bar">
        {{#  if(d.isEnabled === 0){ }}
            <button type="button" class="pear-btn mi-btn-green pear-btn-sm" lay-event="audit"><i class="layui-icon layui-icon-ok"></i></button>
        {{#  } }}
        <button class="pear-btn pear-btn-primary pear-btn-sm" lay-event="has-role"><i class="layui-icon layui-icon-username"></i></button>
        <button class="pear-btn pear-btn-primary pear-btn-sm" lay-event="gen"><i class="layui-icon layui-icon-password"></i></button>
        <button class="pear-btn pear-btn-danger pear-btn-sm" lay-event="remove"><i class="layui-icon layui-icon-delete"></i></button>
    </script>

    <script>
        layui.use(['table', 'form', 'jquery', 'common'], function () {
            let table = layui.table;
            let form = layui.form;
            let $ = layui.jquery;
            let common = layui.common;
            let pageRootUrl = "/System/User/";

            table.render({
                elem: '#user-table',
                url: pageRootUrl + 'GetUserList',
                page: true,
                request: {
                    limitName: 'size'
                },
                contentType: 'application/json',
                method: 'post',
                cols: [[
                    {
                        type: 'numbers'
                    },
                    {
                        title: '用户名',
                        field: 'userName',
                        align: 'center'
                    },
                    {
                        title: '状态',
                        field: 'isEnabled',
                        align: 'center',
                        templet: function (d) {
                            if (d.isEnabled === 1) {
                                return `<span class="layui-badge layui-bg-green">启用</span>`
                            }
                            return `<span class="layui-badge layui-bg-orange">禁用</span>`
                        }
                    },
                    {
                        title: '角色/身份',
                        field: 'roleNameString',
                        align: 'center',
                        templet: function (d) {
                            if (d.roleNameString) {
                                return d.roleNameString
                            }
                            return `--`
                        }
                    },
                    {
                        title: '创建时间',
                        field: 'createdOn',
                        align: 'center'
                    },
                    {
                        title: '操作',
                        toolbar: '#user-bar',
                        align: 'center',
                        width: 210
                    }
                ]],
                skin: 'line',
                toolbar: '#user-toolbar',
                defaultToolbar: [{
                    title: '刷新',
                    layEvent: 'refresh',
                    icon: 'layui-icon-refresh',
                }, 'filter'],
                parseData: function (res) {
                    let paging = common.pagingResult(res);
                    return {
                        "code": common.tableCode(res.code),
                        "msg": res.message,
                        "count": paging.total,
                        "data": paging.data
                    };
                }
            });

            table.on('toolbar(user-table)', function (obj) {
                if (obj.event === 'add') {
                    window.add();
                } else if (obj.event === 'refresh') {
                    window.refresh();
                }
            });

            table.on('tool(user-table)', function (obj) {
                if (obj.event === 'remove') {
                    window.remove(obj);
                } else if (obj.event === 'gen') {
                    window.gen(obj);
                } else if (obj.event === 'has-role') {
                    window.role(obj)
                } else if (obj.event === 'audit') {
                    layer.confirm('启用后，用户将可以登录系统，是否继续？', {
                        icon: 3,
                        title: '提示'
                    }, function (index) {
                        layer.close(index);
                        $.post(pageRootUrl + 'PassedUser?id=' + obj.data['userId'], function (res) {
                            if (common.ajaxSuccess(res.code)) {
                                layer.msg(res.message, {
                                    icon: 1,
                                    time: 1000
                                }, function () {
                                    window.refresh()
                                });
                            } else {
                                layer.msg(res.message, {
                                    icon: 2,
                                    time: 1000
                                });
                            }
                        })
                    })
                }
            });

            form.on('submit(user-query)', function (data) {
                table.reload('user-table', {
                    where: data.field
                })
                return false;
            });

            $("#btnReset").click(function () {
                $("input[name='userName']").val('');
                table.reload('user-table', {
                    where: {}
                })
            })

            window.refresh = function (param) {
                table.reload('user-table');
            }

            window.role = function (obj) {
                layer.open({
                    type: 2,
                    title: '用户角色',
                    shade: 0.1,
                    area: ['600px', '400px'],
                    content: pageRootUrl + 'UserRole?id=' + obj.data['userId']
                });
            }

            window.add = function () {
                layer.open({
                    type: 2,
                    title: '新增',
                    shade: 0.1,
                    area: ['500px', '300px'],
                    content: pageRootUrl + 'Edit'
                });
            }

            window.gen = function (obj) {
                layer.confirm('更新用户密码后，旧密码将无法使用，确定继续吗？', {
                    icon: 3,
                    title: '提示'
                }, function (index) {
                    layer.close(index);
                    $.post(pageRootUrl + 'UpdatePassword?userId=' + obj.data['userId'], function (res) {
                        if (common.ajaxSuccess(res.code)) {
                            layer.alert('更新后用户密码：' + res.result, {
                                time: 10 * 1000,
                                success: function (layero, index) {
                                    var timeNum = this.time / 1000, setText = function (start) {
                                        layer.title('<span class="layui-font-red">' + (start ? timeNum : --timeNum) + '</span> 秒后自动关闭', index);
                                    };
                                    setText(!0);
                                    this.timer = setInterval(setText, 1000);
                                    if (timeNum <= 0) clearInterval(this.timer);
                                },
                                end: function () {
                                    clearInterval(this.timer);
                                }
                            });
                        } else {
                            layer.msg(res.message, {
                                icon: 2,
                                time: 1000
                            });
                        }
                    })
                })
            }

            window.remove = function (obj) {
                layer.confirm('确定要删除该用户', {
                    icon: 3,
                    title: '提示'
                }, function (index) {
                    layer.close(index);
                    let loading = layer.load();
                    $.ajax({
                        url: pageRootUrl + "RemoveUser?userId=" + obj.data['userId'],
                        dataType: 'json',
                        type: 'post',
                        success: function (result) {
                            layer.close(loading);
                            if (common.ajaxSuccess(result.code)) {
                                layer.msg(result.message, {
                                    icon: 1,
                                    time: 1000
                                }, function () {
                                    window.refresh()
                                });
                            } else {
                                layer.msg(result.message, {
                                    icon: 2,
                                    time: 1000
                                });
                            }
                        }
                    })
                });
            }
        })
    </script>
}