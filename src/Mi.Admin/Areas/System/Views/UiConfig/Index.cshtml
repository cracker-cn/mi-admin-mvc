@{
    Layout = "_ElementUiPlusLayout";
}

<el-card shadow="never">
    <template #header>
        <div class="card-header">
            <span>站点Tab</span>
        </div>
    </template>
    <el-form :model="siteForm" :inline="true" :label-width="labelWidth" ref="siteForm" :rules="rules">
        <el-form-item label="站点ico" prop="site_icon">
            <el-input v-model="siteForm.site_icon" placeholder="请输入站点icon" />
        </el-form-item>
        <el-form-item label="站点标题" prop="site_title">
            <el-input v-model="siteForm.site_title" placeholder="请输入站点标题" />
        </el-form-item>
        <el-form-item>
            <el-button type="primary" @@click="onSubmit('siteForm',siteForm)">确定</el-button>
        </el-form-item>
    </el-form>
</el-card>

<el-card shadow="never" class="mt-1">
    <template #header>
        <div class="card-header">
            <span>登录页</span>
        </div>
    </template>
    <el-form :model="loginForm" :inline="true" :label-width="labelWidth" ref="loginForm" :rules="rules">
        <el-form-item label="登录标题" prop="login_middle_name">
            <el-input v-model="loginForm.login_middle_name" placeholder="请输入登录标题" />
        </el-form-item>
        <el-form-item label="版权信息" prop="login_footer_word">
            <el-input v-model="loginForm.login_footer_word" placeholder="请输入版权信息" />
        </el-form-item>
        <el-form-item>
            <el-button type="primary" @@click="onSubmit('loginForm',loginForm)">确定</el-button>
        </el-form-item>
    </el-form>
</el-card>

<el-card shadow="never" class="mt-1">
    <template #header>
        <div class="card-header">
            <span>首页</span>
        </div>
    </template>
    <el-form :model="homeForm" :inline="true" :label-width="labelWidth" ref="homeForm" :rules="rules">
        <el-form-item label="地址" prop="home_page_url">
            <el-input v-model="homeForm.home_page_url" placeholder="请输入首页地址" />
        </el-form-item>
        <el-form-item label="名称" prop="home_page_name">
            <el-input v-model="homeForm.home_page_name" placeholder="请输入首页名称" />
        </el-form-item>
        <el-form-item>
            <el-button type="primary" @@click="onSubmit('homeForm',homeForm)">确定</el-button>
        </el-form-item>
    </el-form>
</el-card>

<el-card shadow="never" class="mt-1">
    <template #header>
        <div class="card-header">
            <span>系统</span>
        </div>
    </template>
    <el-form :model="sysForm" :inline="true" :label-width="labelWidth" ref="sysForm" :rules="rules">
        <el-form-item label="名称" prop="header_name">
            <el-input v-model="sysForm.header_name" placeholder="请输入系统名称" />
        </el-form-item>
        <el-form-item label="Logo" prop="logo">
            <el-input v-model="sysForm.logo" placeholder="请输入系统Logo" />
        </el-form-item>
        <el-form-item>
            <el-button type="primary" @@click="onSubmit('sysForm',sysForm)">确定</el-button>
        </el-form-item>
    </el-form>
</el-card>

@section Scripts{
    <script>
        const ROOT_PATH = '/System/UiConfig/';
        const App = {
            data() {
                return {
                    labelWidth: '120px',
                    sysForm: {},
                    homeForm: {},
                    loginForm: {},
                    siteForm: {},
                    form: {},
                    rules: {
                        home_page_url: [
                            { required: true, message: '首页地址不能为空', trigger: 'blur' }
                        ],
                        home_page_name: [
                            { required: true, message: '首页名称不能为空', trigger: 'blur' }
                        ],
                        header_name: [
                            { required: true, message: '系统名称不能为空', trigger: 'blur' }
                        ],
                        logo: [
                            { required: true, message: '系统Logo不能为空', trigger: 'blur' }
                        ],
                        site_icon: [
                            { required: true, message: '站点ico不能为空', trigger: 'blur' }
                        ],
                        site_title: [
                            { required: true, message: '站点标题不能为空', trigger: 'blur' }
                        ],
                        login_middle_name: [
                            { required: true, message: '登录标题不能为空', trigger: 'blur' }
                        ],
                        login_footer_word: [
                            { required: true, message: '版权信息不能为空', trigger: 'blur' }
                        ]
                    }
                }
            },
            methods: {
                initData() {
                    axios.post(ROOT_PATH + "GetUiConfig").then(res => {
                        if (MiUtils.ajaxSucceed(res.data.code)) {
                            this.siteForm.site_icon = res.data.result.site_icon
                            this.siteForm.site_title = res.data.result.site_title

                            this.loginForm.login_middle_name = res.data.result.login_middle_name
                            this.loginForm.login_footer_word = res.data.result.login_footer_word

                            this.homeForm.home_page_url = res.data.result.home_page_url
                            this.homeForm.home_page_name = res.data.result.home_page_name

                            this.sysForm.header_name = res.data.result.header_name
                            this.sysForm.logo = res.data.result.logo
                        } else {
                            ElementPlus.ElMessage.error(res.data.message)
                        }
                    })
                },
                onSubmit(refName,data) {
                    this.$refs[refName].validate((valid, fields) => {
                        if (valid) {
                            ElementPlus.ElMessageBox.confirm(
                                'UI配置影响全局，是否继续？',
                                '提示',
                                {
                                    confirmButtonText: '确定',
                                    cancelButtonText: '取消',
                                    type: 'warning',
                                }
                            )
                                .then(() => {
                                    axios.post(ROOT_PATH + 'SetUiConfig', data)
                                        .then(res => {
                                            if (MiUtils.ajaxSucceed(res.data.code)) {
                                                ElementPlus.ElMessage.success(res.data.message)
                                                this.initData()
                                            } else {
                                                ElementPlus.ElMessage.error(res.data.message)
                                            }
                                        })
                                }).catch(() => {
                                    ElementPlus.ElMessage({
                                        type: 'info',
                                        message: '取消操作',
                                    })
                                })
                        } else {
                            console.log(fields)
                            ElementPlus.ElMessage.warning('表单项验证失败')
                        }
                    })
                }
            },
            created() {
                this.initData()
            }
        }
    </script>
}